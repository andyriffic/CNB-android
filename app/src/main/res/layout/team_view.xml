<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView android:id="@+id/teamName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="[TEAM NAME]"
              android:textSize="25sp"
              android:textStyle="bold"
              android:textColor="#333"
              android:padding="10dp"
              android:textAlignment="center"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Player"
              android:textSize="19sp"
              android:textAlignment="center"
              android:paddingTop="10dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>

    <TextView android:id="@+id/playerName" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="[PLAYER NAME]"
              android:textAlignment="center"
              android:textSize="22sp"
              android:textColor="#000"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="PowerUp"
              android:textSize="19sp"
              android:textAlignment="center"
              android:paddingTop="10dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>

    <TextView android:id="@+id/usedPowerup" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="-"
              android:textAlignment="center"
              android:textSize="22sp"
              android:textColor="#000"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>

    <ImageView android:id="@+id/winnerIcon"
               android:src="@drawable/ic_baseline_mood_24px"
               android:layout_width="200dp"
               android:layout_height="200dp"
               android:layout_gravity="center"
               android:tint="#78AB46"
               android:visibility="visible"
               />

    <TextView android:id="@+id/winnerText" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Winner"
              android:textAlignment="center"
              android:textSize="22sp"
              android:textColor="#78AB46"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>

    <ProgressBar android:id="@+id/loadingIndicator"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>


</LinearLayout>