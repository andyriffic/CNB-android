<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/backgroundPrimary"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView android:id="@+id/teamName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="TEAM NAME"
              android:fontFamily="@font/bubblegum"
              android:textSize="35sp"
              android:textStyle="bold"
              android:textColor="@color/colorHeading"
              android:padding="20dp"
              android:textAlignment="center"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Player"
              android:textColor="@color/colorHeadingSecondary"
              android:textSize="19sp"
              android:textAlignment="center"
              android:paddingTop="10dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>

    <TextView android:id="@+id/playerName" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="PLAYER NAME"
              android:textAlignment="center"
              android:fontFamily="@font/bubblegum"
              android:textSize="30sp"
              android:textColor="@color/colorPrimary"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="PowerUp"
              android:textColor="@color/colorHeadingSecondary"
              android:textSize="19sp"
              android:textAlignment="center"
              android:paddingTop="10dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>

    <TextView android:id="@+id/usedPowerup" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="PowerUp"
              android:textAlignment="center"
              android:fontFamily="@font/bubblegum"
              android:textSize="20sp"
              android:textColor="@color/colorPrimary"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>

    <ImageView android:id="@+id/winnerIcon"
               android:src="@drawable/ic_baseline_mood_24px"
               android:layout_width="200dp"
               android:layout_height="200dp"
               android:layout_gravity="center"
               android:paddingTop="40dp"
               android:tint="#78AB46"
               android:visibility="visible"
               />

    <TextView android:id="@+id/winnerText" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="Winner"
              android:textAlignment="center"
              android:fontFamily="@font/bubblegum"
              android:textSize="30sp"
              android:textColor="#78AB46"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"/>


</LinearLayout>